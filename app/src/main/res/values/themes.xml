<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StringExtensions" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Text font style. -->
        <item name="android:textViewStyle">@style/PoppinsTextViewStyle</item>
        <item name="android:buttonStyle">@style/PoppinsButtonStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents" />


    <!-- TextView styles. -->

    <style name="TextView.Regular" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextView.Medium" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextView.SemiBold" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="TextView.Bold" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextView.Regular.Code" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/jet_brains_mono_regular</item>
    </style>

    <style name="TextView.Medium.Code" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/jet_brains_mono_medium</item>
    </style>

    <style name="TextView.SemiBold.Code" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/jet_brains_mono_semi_bold</item>
    </style>

    <style name="TextView.Bold.Code" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/jet_brains_mono_bold</item>
    </style>

    <style name="TextView.ToolbarTitle" parent="TextView.SemiBold">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PoppinsTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- End TextView styles. -->


    <!-- Button styles. -->

    <style name="Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="PoppinsButtonStyle" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- End Button styles. -->


    <!-- CardView styles. -->

    <style name="CardView.Outlined" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/colorGainsboro</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- End of CardView styles. -->
</resources>